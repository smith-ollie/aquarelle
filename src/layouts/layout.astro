---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <title>Oliver Smith - Watercolour Artist</title>
    <meta charset="UTF-8" />
    <meta name="description" content="Watercolour art by Oliver Smith" />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:image" content="https://olliesmith.dev/og-image.png" />
    <meta name="theme-color" content="#3e3e3e" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <ClientRouter />
  </head>
  <body class="bg-[#F2F0EF] @container">
    <div class="flex flex-col items-center gap-10 min-h-screen">
      <slot />
    </div>
    <slot name="image" />
  </body>
</html>
